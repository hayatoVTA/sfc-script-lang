<div class="mx-auto md:w-2/3 w-full flex ">
  <div class="mx-auto margin ">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @post %>

    <%= link_to "投稿を編集する", edit_post_path(@post), class: "post_button mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "投稿を削除する", post_path(@post), method: :delete, class: "post_button mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "投稿一覧に戻る", posts_path, class: "post_button ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
